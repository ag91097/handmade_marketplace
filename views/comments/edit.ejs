<%- include("../partials/header") %>

<div class="container">
        <h1 style="text-align: center; margin-top: 25px">Edit Comment</h1>
        <div style="margin: 25px auto;" class="col-xs-12 col-md-6 col-lg-4">
            <form action="/products/<%= product_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/products/<%= product_id %>">GO BACK</a>
        </div>
</div>

<%- include("../partials/footer") %>
